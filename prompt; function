js
---------------
function Somar(){
    let n1=0;
    let n2=0;

    n1 = Number(prompt("Informe o primeiro número:"));
    n2 = Number(prompt("Informe o primeiro número:"));

    let resultado = n1 + n2

    console.log(`A soma do número ${n1} e do número ${n2} é igual á ${resultado} `)
}

function Subtrair(){
    let n1=0;
    let n2=0;

    n1 = Number(prompt("Informe o primeiro número:"));
    n2 = Number(prompt("Informe o primeiro número:"));

    let resultado = n1 - n2

    console.log(`A subtração: ${n1} e do número ${n2} é igual á ${resultado} `)
}

function Dividir(){
    let n1=0;
    let n2=0;

    n1 = Number(prompt("Informe o primeiro número:"));
    n2 = Number(prompt("Informe o primeiro número:"));

    let resultado = n1 / n2

    console.log(`A divisão do número ${n1} e do número ${n2} é igual á ${resultado} `)
}

function Multiplicar(){
    let n1=0;
    let n2=0;

    n1 = Number(prompt("Informe o primeiro número:"));
    n2 = Number(prompt("Informe o primeiro número:"));

    let resultado = n1 * n2

    console.log(`A multiplicação do número ${n1} e do número ${n2} é igual á ${resultado} `)
}
